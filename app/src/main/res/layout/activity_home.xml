<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

       >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="20dp"
            android:scaleType="fitXY"
            android:id="@+id/home_all_categories" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="                          All Categories"
            android:textColor="@color/icons"
            android:layout_marginTop="30dp"
            android:textSize="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="102dp"
            android:background="@color/primary_text"
            android:layout_marginRight="240dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="102dp"
            android:layout_marginLeft="285dp"
            android:background="@color/primary_text"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="Featured Collections"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_marginTop="160dp"
            android:layout_height="150dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/home_most_talked_about"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textSize="20dp"
            android:layout_marginLeft="205dp"
            android:id="@+id/home_most_unique"
            android:layout_marginTop="160dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Most Talked"
            android:background="@color/primary"
            android:textColor="@color/icons"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Most Unique"
            android:background="@color/primary"
            android:textColor="@color/icons"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="300dp"
            android:textSize="20dp"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="350dp"
            android:layout_height="150dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/home_all_products"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="                          All Products"
            android:background="@color/primary"
            android:textColor="@color/icons"
            android:layout_marginTop="475dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:id="@+id/home_start_selling"
            android:text="        START SELLING"
            android:layout_marginTop="520dp"
            android:background="@color/primary"
            android:textColor="@color/icons"

            />



    </FrameLayout>
</ScrollView>
</LinearLayout>