<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent" android:layout_width="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <Button
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/sell_take_picture"
                    android:textSize="20dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:text="take picture"
                    android:background="@color/primary"
                    android:textColor="@color/icons"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="200dp"
                    android:id="@+id/sell_pick_from_gallery"
                    android:textSize="20dp"
                    android:text="pick from gallery"
                    android:background="@color/primary"
                    android:textColor="@color/icons"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/sell_take_picture_i"
                    android:textSize="20dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:text="take picture"
                    android:background="@color/primary"
                    android:textColor="@color/icons"/>
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="200dp"
                    android:id="@+id/sell_pick_from_gallery_i"
                    android:textSize="20dp"
                    android:text="pick from gallery"
                    android:background="@color/primary"
                    android:textColor="@color/icons"
                    android:layout_marginTop="10dp"/>


            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="PRODUCT DETAILS"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="10dp"
                android:fontFamily="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title of product"
                android:id="@+id/sell_product_name"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sell_product_description"
                android:hint="Description"
                android:lines="5"
                android:textSize="20dp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONDITION:"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sell_condition_new"
                        android:textSize="20dp"
                        android:text="NEW"
                        android:checked="true"
                        android:layout_marginLeft="20dp"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/sell_condition_used"
                        android:textSize="20dp"
                        android:text="USED"
                        android:layout_marginLeft="20dp"/>
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unique? :"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <ToggleButton
                    android:layout_marginLeft="30dp"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:textOn="YES"
                    android:textOff="NO"

                    android:id="@+id/sell_unique"


                    />
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sell_selling_price"
                android:hint="Selling price"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CATEGORY:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/sell_category"
                    android:layout_marginLeft="10dp">

                </Spinner>
            </LinearLayout>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="17dp"
                android:id="@+id/sell_terms"
                android:text="The product listed here is not fake / prohibited to the best of my knowledge"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:id="@+id/sell_publish"
                android:text="PUBLISH PRODUCT"
                android:background="@color/primary"
                android:textColor="@color/icons"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>